<Window x:Class="OmsDeployer.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OMS Deployment Assistant" Height="700" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Configuration Section -->
        <GroupBox Grid.Row="0" Header="Configuration" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Repo Path:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="RepoPathTextBox" Margin="5,0"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Click="BrowseRepoPath" Margin="5,0"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Profile:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ProfileComboBox" Margin="5,0"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Platform:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="PlatformComboBox" Margin="5,0">
                    <ComboBoxItem Content="RfLambda"/>
                    <ComboBoxItem Content="RapidRf"/>
                    <ComboBoxItem Content="MillerMmic"/>
                </ComboBox>
                <Button Grid.Row="2" Grid.Column="2" Content="Settings..." Click="OpenSettings" Margin="5,0"/>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="1. Build WAR" x:Name="BuildButton" Click="BuildWar" Width="120" Height="35" Margin="5"/>
            <Button Content="2. Upload to FTP" x:Name="UploadButton" Click="UploadWar" Width="120" Height="35" Margin="5"/>
            <Button Content="3. Stage to Tomcat" x:Name="StageButton" Click="StageWar" Width="120" Height="35" Margin="5"/>
            <Button Content="4. Deploy" x:Name="DeployButton" Click="DeployWar" Width="120" Height="35" Margin="5"/>
        </StackPanel>

        <!-- Log Output -->
        <GroupBox Grid.Row="2" Header="Log Output">
            <ScrollViewer>
                <TextBox x:Name="LogTextBox" IsReadOnly="True" 
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="10"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

